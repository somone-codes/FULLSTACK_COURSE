<%- include('header'); -%>

<body>
    <div id="heading" class="box">
        <h1><%=listName%></h1>
    </div>
    <div class="box">
        <% for(let i=0; i<listItems.length;i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= listItems[i] %></p>
        </div>
        <% }%>

        <form class="item" action="todoList" method="post">
            <label for="item">
                <input type="text" autocomplete="off" autofocus placeholder="New item" name="item" id="item">
            </label>
            <button type="submit" name="addListItemButton" value=<%=listName%>>+</button>
        </form>
    </div>


</body>

<%- include('footer'); -%>